<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".C_TournamentResult"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView"
        style="@style/TextViewStyle_SubHeadline"
        android:layout_gravity="top"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:keepScreenOn="true"
        android:text="Ergebnisse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="wrap_content"
        android:layout_height="480dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.26999998">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewPlace1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/podkova_bold"
                android:text="test"
                android:textColor="@color/gold"
                android:textSize="45sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TextViewPlace2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/podkova_bold"
                android:text="test"
                android:textColor="@color/silver"
                android:textSize="43sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TextViewPlace3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/podkova_bold"
                android:text="test"
                android:textColor="@color/bronze"
                android:textSize="40sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TextViewPlace4"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace5"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace6"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace7"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace8"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace9"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace10"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace11"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace12"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace13"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace14"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace15"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/TextViewPlace16"
                style="@style/TextViewStyle_Standard_Gone" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/returnBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="zurück zum Menü"
        android:textColor="@color/textcolor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollView4"
        app:layout_constraintStart_toStartOf="@+id/scrollView4"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4" />
</android.support.constraint.ConstraintLayout>