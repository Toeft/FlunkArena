<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".B_PatchNotes">

    <TextView
        android:id="@+id/textView"
        style="@style/TextViewStyle_SubHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:keepScreenOn="true"
        android:text="Patch Notes" />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="0.0.2"
        android:layout_marginTop="30dp"/>

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="Niederlagen werden angezeigt." />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="Mehr als 12 Spieler sind möglich (20)." />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="Spieler löschen ist möglich." />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="0.0.3" />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="Es wird nach Quote sortiert." />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="Einige Regeln hinzugefügt." />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="Die Quote wird angezeigt." />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="Nicht genügend Spiele angezeigt." />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="0.1.0" />

    <TextView
        style="@style/TextViewStyle_PatchNotes"
        android:text="UI Update" />

</LinearLayout>