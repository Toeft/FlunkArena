<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".B_PlayerEdit"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView"
        android:layout_gravity="top"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Spieler"
        style="@style/TextViewStyle_SubHeadline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:errorEnabled="true"
        android:textAlignment="center"
        app:boxStrokeColor="@color/colorPrimaryDark"
        android:textColorHint="@color/textcolor"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/PE_PI"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Spielernamen einegeben"
            android:inputType="text"
            android:fontFamily="@font/podkova_bold"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/PE_ADD"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/scrollviewbg"
        android:text="HinzufÃ¼gen"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:fontFamily="@font/podkova_bold"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/scrollviewbg"
        app:layout_constraintEnd_toEndOf="@+id/PE_ADD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/PE_ADD"
        app:layout_constraintTop_toBottomOf="@+id/PE_ADD">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PE_P1"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P2"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P3"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P4"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P5"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P6"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P7"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P8"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P9"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P10"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P11"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P12"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P13"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P14"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P15"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P16"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P17"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P18"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P19"
                style="@style/TextViewStyle_Standard_Gone" />

            <TextView
                android:id="@+id/PE_P20"
                style="@style/TextViewStyle_Standard_Gone" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>