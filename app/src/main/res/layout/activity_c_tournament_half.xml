<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".C_TournamentHalf"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        style="@style/TextViewStyle_SubHeadline"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Half"/>

    <LinearLayout
        android:id="@+id/LinLayM1"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="8sp"
        android:background="@drawable/scrollviewbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewM1T1N" style="@style/TextViewStyle_StandardTeamTurnamentFont" />

            <TextView
                android:id="@+id/textView5" style="@style/TextViewStyle_HeadlineTurnamentFont" android:text="Spiel 1"/>

            <TextView
                android:id="@+id/textViewM1T2N" style="@style/TextViewStyle_StandardTeamTurnamentFont" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewM1T1"
                style="@style/TextViewStyle_StandardTurnamentFont"
                android:textAlignment="textStart"
                android:layout_marginLeft="32dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0 "
                android:gravity="center"
                android:text="vs."
                android:textAlignment="center"
                android:fontFamily="@font/bungee_shade"
                android:textAppearance="@style/TextViewStyle_Standard"
                android:textColor="#FFD5B8"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textViewM1T2"
                style="@style/TextViewStyle_StandardTurnamentFont"
                android:textAlignment="textStart"
                android:layout_marginLeft="32dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinLayM2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="8sp"
        android:background="@drawable/scrollviewbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewM2T1N" style="@style/TextViewStyle_StandardTeamTurnamentFont"/>

            <TextView
                android:id="@+id/textView6" style="@style/TextViewStyle_HeadlineTurnamentFont" android:text="Spiel 2"/>

            <TextView
                android:id="@+id/textViewM2T2N" style="@style/TextViewStyle_StandardTeamTurnamentFont"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewM2T1"
                style="@style/TextViewStyle_StandardTurnamentFont"
                android:textAlignment="textStart"
                android:layout_marginLeft="32dp"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0 "
                android:gravity="center"
                android:text="vs."
                android:textAlignment="center"
                android:fontFamily="@font/bungee_shade"
                android:textAppearance="@style/TextViewStyle_Standard"
                android:textColor="#FFD5B8"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textViewM2T2"
                style="@style/TextViewStyle_StandardTurnamentFont"
                android:textAlignment="textStart"
                android:layout_marginLeft="32dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/doneBTN_Half"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/scrollviewbg"
        android:fontFamily="@font/podkova_bold"
        android:text="Weiter"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp" />

</LinearLayout>