            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewM1T1N" style="@style/TextViewStyle_StandardTeamTurnamentFont" />

            <TextView
