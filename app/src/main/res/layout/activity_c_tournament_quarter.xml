                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewM1T2"
                style="@style/TextViewStyle_StandardTurnamentFont"
                android:textAlignment="textEnd"
                android:layout_marginRight="32dp"/>

        </LinearLayout>

    </LinearLayout>

